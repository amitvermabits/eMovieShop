<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>eMovieShop</display-name>
	
	<servlet>
		<description>
		</description>
		<display-name>LoginServlet</display-name>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.calance.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		CategoryController</display-name>
		<servlet-name>CategoryController</servlet-name>
		<servlet-class>
		com.calance.servlet.CategoryController</servlet-class>
	</servlet>
	<servlet>
		<description>
		This is the shopping cart controller</description>
		<display-name>
		ShoppingCartController</display-name>
		<servlet-name>ShoppingCartController</servlet-name>
		<servlet-class>
		com.calance.servlet.ShoppingCartController</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		PaymentController</display-name>
		<servlet-name>PaymentController</servlet-name>
		<servlet-class>
		com.calance.servlet.PaymentController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CategoryController</servlet-name>
		<url-pattern>/CategoryController</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ShoppingCartController</servlet-name>
		<url-pattern>/ShoppingCartController</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PaymentController</servlet-name>
		<url-pattern>/PaymentController</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
</web-app>